<div class="row">
  <div class="col-md-12">
    <label for="">Name</label>
    <%= @item.name %>
  </div>
</div>
<div class="row">
  <div class="col-md-12">
    <label for="">Description</label>
    <%= @item.description %>
  </div>
</div>
<div class="row">
  <div class="col-md-12">
    <label for="">Quantity</label>
    <%= @item.quantity %>
  </div>
</div>

<div class="row">
  <div class="col-md-12">
    <%= link_to 'Back', items_path, class: 'btn btn-default' %>
    <%= link_to 'Destroy', item_path(@item), class: 'btn btn-danger', method: :delete %>
  </div>
</div>
